<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.TicketGeneratorApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/booking"
        android:label="@string/app_name"
        android:roundIcon="@drawable/booking"
        android:supportsRtl="true"
        android:theme="@style/Theme.GeneratoreDiBiglietti"
        android:usesCleartextTraffic="true"
        android:fitsSystemWindows="false"
        tools:targetApi="31">
        <activity
            android:name=".activities.mainactivity.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.authenticationactivity.AutheticationActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>